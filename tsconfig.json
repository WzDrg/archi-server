{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "/node_modules/"
  ],
  "include": [
    "src/**/*.ts"
  ]
}